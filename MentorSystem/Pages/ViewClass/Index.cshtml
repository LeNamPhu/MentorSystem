@page
@model MentorSystem.Pages.ViewClass.IndexModel
@{
}
<p>
    <a asp-page="../ViewMentor/Index">View Mentor</a><br />
    <a asp-page="../ViewClass/ViewStudentClass">View Registered Class</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Mentorid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Schedule)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Class) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mentorid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Schedule)
            </td>
            <td>
                    <a asp-page="./RequestClass" asp-route-id="@item.Id" class="btn btn-primary">Request Register</a> |
            </td>
        </tr>
}
    </tbody>
</table>
